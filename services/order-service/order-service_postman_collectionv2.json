  "item": [
    {
      "name": "Cart",
      "item": [
        {
          "name": "GET /api/orders/cart - Get/Create Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/orders/cart?restaurant_id={{restaurant_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "orders",
                "cart"
              ],
              "query": [
                {
                  "key": "restaurant_id",
                  "value": "{{restaurant_id}}"
                }
              ]
            },
            "description": "Gets the current cart for the authenticated customer and given restaurant_id. Creates a new empty cart if none exists."
          },
          "response": []
        },
        {
          "name": "POST /api/orders/cart/items - Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurant_id\": \"{{restaurant_id}}\",\n  \"productId\": \"{{product_id}}\",\n  \"quantity\": 2,\n  \"notes\": \"no onion\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders/cart/items",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "orders",
                "cart",
                "items"
              ]
            },
            "description": "Adds an item (dish/product) into the customer's cart for a specific restaurant."
          },
          "response": []
        },
        {
          "name": "PATCH /api/orders/cart/items/:itemId - Update Cart Item",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurant_id\": \"{{restaurant_id}}\",\n  \"quantity\": 3\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders/cart/items/{{item_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "orders",
                "cart",
                "items",
                "{{item_id}}"
              ]
            },
            "description": "Updates quantity and/or notes of a cart item. Set quantity <= 0 to remove it."
          },
          "response": []
        },
        {
          "name": "DELETE /api/orders/cart/items/:itemId - Remove Cart Item",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurant_id\": \"{{restaurant_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders/cart/items/{{item_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "orders",
                "cart",
                "items",
                "{{item_id}}"
              ]
            },
            "description": "Removes an item from the cart for the given restaurant_id."
          },
          "response": []
        },
        {
          "name": "DELETE /api/orders/cart - Clear Cart",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurant_id\": \"{{restaurant_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders/cart",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "orders",
                "cart"
              ]
            },
            "description": "Marks the current cart as expired for the given restaurant and clears it."
          },
          "response": []
        },
        {
          "name": "POST /api/orders/cart/checkout - Checkout Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurant_id\": \"{{restaurant_id}}\",\n  \"payment_method\": \"cod\",\n  \"long_address\": \"212 Nguyen Thien Thuat, P.3, Q.3\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders/cart/checkout",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "orders",
                "cart",
                "checkout"
              ]
            },
            "description": "Submits the current cart as an order and sets payment_method and long_address. For non-COD, the service would later integrate with PAYMENT_SERVICE_URL."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "GET /api/orders - List Orders (history)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{customer_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/orders?status={{order_statuses}}&page=1&limit=20",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "orders"
              ],
              "query": [
                {
                  "key": "status",
                  "value": "{{order_statuses}}"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            },
            "description": "Lists the authenticated customer's orders filtered by status list (CSV). Defaults to submitted,payment_pending,confirmed,preparing,ready_for_pickup,delivering,completed,cancelled,payment_failed."
          },
          "response": [],
          "description": "Lists the authenticated customer's orders filtered by status list (CSV). Defaults to submitted,payment_pending,confirmed,preparing,ready_for_pickup,delivering,completed,cancelled,payment_failed."
