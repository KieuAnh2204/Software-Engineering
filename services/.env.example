# ============================================
# FOODFAST DELIVERY - MICROSERVICES CONFIG (EXAMPLE)
# ============================================
# Copy this file to .env and update with your actual values

# ============================================
# SHARED CONFIGURATION
# ============================================
NODE_ENV=development

# JWT Configuration (shared across all services)
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# MongoDB Atlas Credentials
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password
MONGODB_CLUSTER=cluster0.xxxxx.mongodb.net

# ============================================
# USER SERVICE - Port 3001
# ============================================
USER_SERVICE_PORT=3001
USER_SERVICE_MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/user_service?retryWrites=true&w=majority&appName=Cluster0

# ============================================
# PRODUCT SERVICE - Port 3003
# ============================================
PRODUCT_SERVICE_PORT=3003
PRODUCT_SERVICE_MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/product_service?retryWrites=true&w=majority&appName=Cluster0

# ============================================
# ORDER SERVICE - Port 3002
# ============================================
ORDER_SERVICE_PORT=3002
ORDER_SERVICE_MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/order_service?retryWrites=true&w=majority&appName=Cluster0

# Microservices URLs (for inter-service communication)
USER_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3004

# ============================================
# PAYMENT SERVICE - Port 3004
# ============================================
PAYMENT_SERVICE_PORT=3004
PAYMENT_SERVICE_MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/payment_service?retryWrites=true&w=majority&appName=Cluster0

# Stripe Configuration (Get from https://stripe.com/docs/keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Service Communication URLs
ORDER_SERVICE_URL=http://localhost:3002

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:5000
